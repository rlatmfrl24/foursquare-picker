<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_tips_user_photo"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_margin="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />
    <TextView
        android:id="@+id/tv_tips_user_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="User Name"
        android:textSize="16sp"
        android:fontFamily="@font/opensans_bold"
        app:layout_constraintTop_toTopOf="@id/iv_tips_user_photo"
        app:layout_constraintBottom_toBottomOf="@id/iv_tips_user_photo"
        app:layout_constraintLeft_toRightOf="@id/iv_tips_user_photo"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:id="@+id/tv_tips_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ellipsize="marquee"
        android:text="Description"
        android:layout_marginBottom="18dp"
        app:layout_constraintTop_toBottomOf="@id/iv_tips_user_photo"
        app:layout_constraintLeft_toLeftOf="@id/tv_tips_user_name"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>