<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/iv_venue_photo"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="@color/gray"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tv_venue_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Venue Name"
        android:textSize="32sp"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/iv_venue_photo"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:id="@+id/tv_venue_contact_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Contact"
        android:textSize="20sp"
        android:layout_marginTop="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_venue_name"/>
    <View
        android:id="@+id/view_contact_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black"
        app:layout_constraintTop_toBottomOf="@id/tv_venue_contact_title"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_contact_phone_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/view_contact_divider">
        <TextView
            android:id="@+id/tv_contact_phone_label"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Phone"
            app:layout_constraintHorizontal_weight="3"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/tv_contact_phone"/>
        <TextView
            android:id="@+id/tv_contact_phone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="000-999-9999"
            app:layout_constraintHorizontal_weight="7"
            app:layout_constraintLeft_toRightOf="@id/tv_contact_phone_label"
            app:layout_constraintRight_toRightOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>






</androidx.constraintlayout.widget.ConstraintLayout>